									img.warm-cold-variant__img(src=img+"warm-cold/outside/v4.png", alt="")
							.warm-cold-variant(data-img="outside/v5-1.png")
								.img-wrap
									img.warm-cold-variant__img(src=img+"warm-cold/outside/v5.png", alt="")
						.warm-cold-tab.outside#outside-select2
