section.warm-cold
	.container
		.block-title Cоздайте проект своего будущего балкона
		.inner
			.warm-cold-left
				img.warm-cold__balcony(src=img+"warm-cold/glazing/v1-1.jpg", alt="")
				img.warm-cold__outside(src=img+"warm-cold/outside/v1-1.png", alt="")
			.warm-cold-right
				.warm-cold-block
					.warm-cold-block-row
						.warm-cold-block__title Тип остекления
					.warm-cold-variants.glazing
						.warm-cold-variant.big.active(data-img="glazing/v1-1.jpg")
							.img-wrap
								img.warm-cold-variant__img(src=img+"warm-cold/glazing/v1.png", alt="")
							.warm-cold-variant__text Холодное
						.warm-cold-variant.big(data-img="glazing/v2-1.jpg")
							.img-wrap
								img.warm-cold-variant__img(src=img+"warm-cold/glazing/v2.png", alt="")
							.warm-cold-variant__text Теплое

				.warm-cold-block
					.warm-cold-block-row
						.warm-cold-block__title ВЫБОР НАРУЖНОЙ <br> ОБШИВКИ:
						form.warm-cold-block-form
							select.warm-cold-block-select(name="outside-select")
